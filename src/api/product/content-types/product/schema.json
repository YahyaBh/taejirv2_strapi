{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Tools or products listed for rent"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "string",
      "required": true
    },
    "brand": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "condition": {
      "type": "enumeration",
      "required": true,
      "default": "good",
      "enum": [
        "new",
        "good",
        "average"
      ]
    },
    "price_per_day": {
      "type": "decimal",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "specs": {
      "type": "richtext"
    },
    "city": {
      "type": "string",
      "required": true
    },
    "district": {
      "type": "string"
    },
    "phone_number": {
      "type": "string",
      "required": true
    },
    "whatsapp_number": {
      "type": "string"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "terms_accepted": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "status_product": {
      "type": "enumeration",
      "required": true,
      "default": "pending",
      "enum": [
        "pending",
        "approved",
        "rejected"
      ]
    }
  }
}
